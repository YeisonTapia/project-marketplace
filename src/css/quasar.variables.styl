$primary = var(--q-color-primary)
$secondary = var(--q-color-secondary)
$tertiary = var(--q-color-tertiary)

$positive = var(--q-color-positive)
$info = var(--q-color-info)
$faded = var(--q-color-faded)
$dark = var(--q-color-dark)
$light = var(--q-color-light)


$storePrimary = var(--q-color-storeprimary)
$storeSecondary = var(--q-color-storesecondary)
$storeBackground = var(--q-color-storebackground)

$breakpoint-xs = 575px
$breakpoint-sm = 767px
$breakpoint-md = 991px
$breakpoint-lg = 1199px


@import url('https://fonts.googleapis.com/css?family=Carter+One&display=swap');
@import url('https://fonts.googleapis.com/css?family=Kavoon&display=swap');
@font-face
    font-family 'Trebuchet MS'
    font-style normal
    src url(https://dondeestaesavaina.com/statics/fonts/trebuc.woff)

$font-primary = 'Trebuchet MS'
$font-secondary = 'Carter One'
$font-tertiary='Kavoon', cursive;
$bg-degradado = linear-gradient(to right, #FD2D5E 0%, #fc4c57 50%, #fa4d22 100%)


.text-store-primary
	color $storePrimary !important

.text-store-secondary
	color $storeSecondary !important

.text-store-background
	color $storeBackground !important

.bg-store-primary
	background-color $storePrimary !important

.bg-store-secondary
	background-color $storeSecondary !important

.bg-store-background
	background-color $storeBackground !important
