// app global css
*
  a
    text-decoration none

  //=================== Layout Padding

  .layout-padding
    @media (max-width: 767px)
      padding 1.5rem 0.5rem
    @media (min-width: 768px) and (max-width: 991px)
      padding 1.5rem 2rem
      margin auto
    @media (min-width: 992px) and (max-width: 1199px)
      padding 2.5rem 3rem
      margin auto
    @media (min-width: 1200px)
      padding 3rem 4rem
      margin auto

  //=================== responsive visibilities

  .q-hide
    display none !important

  .q-xs-hide
    @media screen and (min-width: $breakpoint-xs)
      display none !important

  .q-sm-hide
    @media screen and (min-width: $breakpoint-sm)
      display none !important

  .q-md-hide
    @media screen and (min-width: $breakpoint-md)
      display none !important

  .q-lg-hide
    @media screen and (min-width: $breakpoint-lg)
      display none !important

  .q-xl-hide
    @media screen and (min-width: $breakpoint-xl)
      display none !important

  .q-show
    display block !important

  .q-xs-show
    @media screen and (min-width: $breakpoint-xs)
      display block !important

  .q-sm-show
    @media screen and (min-width: $breakpoint-sm)
      display block !important

  .q-md-show
    @media screen and (min-width: $breakpoint-md)
      display block !important

  .q-lg-show
    @media screen and (min-width: $breakpoint-lg)
      display block !important

  .q-xl-show
    @media screen and (min-width: $breakpoint-xl)
      display block !important

  //=================== Input field

  .q-field
    .q-field__bottom
      padding 2px 12px 6px 12px !important


  //=================== List & list items

  .q-item
    padding 0 10px
    min-height 35px

  .q-item__section--avatar
    min-width auto !important
    padding-right 8px !important


  //=================== Round bordes modified

  .round-borders
    border-radius 6px !important
    border 1px solid $grey-4

  //================== Container like bootstrap

  .q-container
    width 100%
    margin 0 auto
    @media screen and (min-width: $breakpoint-xs)
      max-width 540px
    @media screen and (min-width: $breakpoint-sm)
      max-width 720px
    @media screen and (min-width: $breakpoint-md)
      max-width 960px
    @media screen and (min-width: $breakpoint-lg)
      max-width 1140px

  //====================== Alerts notifications

  .q-notification
    .q-notification__actions
      color white !important
    .q-alert
      color white !important

      .q-alert-side
        background-color white

      .q-alert-actions
        color white !important

      //Per type

      &.bg-positive
        .q-alert-side
          border-left 3px solid $positive !important

        .q-alert-side
          color $positive !important

      &.bg-negative
        .q-alert-side
          border-left 3px solid $negative !important

        .q-alert-side
          color $negative !important

      &.bg-cyan
        .q-alert-side
          border-left 3px solid $cyan !important

        .q-alert-side
          color $cyan !important

      &.bg-warning
        .q-alert-side
          border-left 3px solid $warning !important

        .q-alert-side
          color $warning !important

      &.bg-faded
        .q-alert-side
          border-left 3px solid $faded !important

        .q-alert-side
          color $faded !important

      &.bg-black
        .q-alert-side
          border-left 3px solid black !important

        .q-alert-side
          color black !important


  //================== Styles only to backend

  .backend-page
    .box
      border-top 3px solid $primary
      border-radius 5px
      box-shadow $shadow-1
      background-color white
      padding 15px

    .box-table
      border-top 3px solid $primary
      border-radius 5px
      box-shadow $shadow-1
      background-color white
    .q-field
      padding-bottom 20px !important
      .q-field
        padding 0 !important

    .q-table-container
      .q-table-top
        padding 8px 15px !important

    .q-btn, .q-btn-group //All buttons with border radius
      border-radius 28px
      box-shadow none

    .border
      border 1px solid $grey-4

    .border-top-color //border top color
      border-top 3px solid $primary
      padding 15px

      &.q-table-container, &.q-card
        padding 0px

    .btn-small
      min-height 22px
      font-size 12px !important
      padding 4px 10px

      .q-icon
        font-size 13px
        margin-right 5px

    .input-title //Label to input fields
      position relative
      color $grey-8
      font-size 12px
      margin-left 4px
      padding-bottom 4px

      .crudContentPage
        height 12px
        .q-btn
          min-height 22px
          position absolute
          top 4px
          right 0
          font-size 12px !important
          padding 4px 10px

          .q-icon
            font-size 13px
            margin-right 5px

    .q-table-bottom //Q table bottom

      .q-select
        border 0px
        padding 0px

        .q-if-inner, .q-icon
          border 0px

  //===================== VUE TREE SELECT

  .vue-treeselect__portal-target
    z-index 99999999 !important

  .cont-vue-tree
    border 1px solid $grey-4
    border-left 2px solid $primary
    border-radius 4px
    display inline-flex
    margin-right 7px

    .stack-label, .input-title
      float left
      padding 6px 4px
      color $primary
      font-size 16px
      text-transform capitalize

    .vue-treeselect, .q-if-inner, .q-if-control
      float right
      border 0px

      .vue-treeselect__control
        border 0px !important
        width auto
        padding-right 5px !important

      .vue-treeselect__single-value
        font-size 15px
        height 36px
        padding 5px 3px
        line-height 1.8

    .q-field__control
      min-height max-content !important

      .q-field__control-container
        min-height max-content !important
